<div class="container pd">
  <%= form_for @tweet, url: tweets_path do |f| %>
    <h2 class = "submit_text">投稿する</h2>
      <br>
      <p>写真のタグを選んでください</p>
      <%= f.collection_select :tag_ids, Tag.all, :id, :name, {}, {class: "custom-select custom-select-lg"} %>
      <br><br>
      <p>写真について何か一言！</p>
      <%= f.text_field :text, placeholder: "一言", class: "form-control" %>
      <br><br>
      <h5>Beforeの写真</h5>
      <%= f.file_field :image1 %>
      <br><br>
      <h5>Afterの写真</h5>
      <%= f.file_field :image2 %>
      <br><br><br>
      <%= f.submit "共有", class: "btn btn-primary", method: :post %>
  <% end %>
</div>
