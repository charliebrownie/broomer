  <div class="card">
    <div class="card-header">
      <div class="card-imgs">
        <%= image_tag("#{tweet.image1}", id: "image1", class: "card-img", alt: "#{tweet.image1}") %>
        <hr id="horizon">
        <%= image_tag("#{tweet.image2}", id: "image2", class: "card-img", alt: "#{tweet.image2}") %>
      </div>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= tweet.user.nickname %></h5>
      <p class="card-text"><%= tweet.text %></p>
      <%= render "likes/like", tweet: tweet %>
      <%= link_to 'コメント', tweet_path(tweet.id), method: :get, class: "btn btn-primary" %>
      <% if user_signed_in? && current_user.id == tweet.user_id %>
        <%= link_to '編集', edit_tweet_path(tweet.id), method: :get, class: "btn btn-primary"%>
        <%= link_to '削除', tweet_path(tweet.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-primary" %>
      <% end %>
      
      <%= link_to "# #{tweet.tags&.first&.name}", tag_path(tweet.tags&.first&.id), method: :get %>

    </div>
  </div>