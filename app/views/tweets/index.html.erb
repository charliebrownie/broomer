  <div class="content" style="padding: 100px;">
    <% @tweets.each do |tweet| %> 
      <div>

        <div class="card" style = "width: 900px; margin: 0 auto;">
          <div class="card-header" style="display:flex;">
            <img src="<%= tweet.image1 %>" class="card-img" alt="..." width="400" height="400" style="width:50%;">
            <img src="<%= tweet.image2 %>" class="card-img" alt="..." width="400" height="400" style="width:50%;">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= tweet.user.nickname %></h5>
            <p class="card-text"><%= tweet.text %></p>
            <%= render "likes/like", tweet: tweet %>
            <%= link_to '詳細', tweet_path(tweet.id), method: :get, class: "btn btn-primary" %>
            <% if user_signed_in? && current_user.id == tweet.user_id %>
              <%= link_to '編集', edit_tweet_path(tweet.id), method: :get, class: "btn btn-primary"%>
              <%= link_to '削除', tweet_path(tweet.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-primary" %>
            <% end %>
